<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Check24 test task{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('styles/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <section class="header">
            <div class="ac">
                <a href="/" class="logo"><img src="{{ asset('images/logo.jpg') }}" width="100"/></a>
            </div>
            <div class="ac">
                <a href="/">Homepage</a>&nbsp;|&nbsp;<a href="/login">Login</a>
            </div>
        </section>
        <section class="content">
            <div>
                {% for key, value in list %}
                    <p>{{ value.date }}<b>
                        {{ value.title }}
                        </b></p>
                        <div>{{  value.description|slice(0,100)~'...' }}</div>
                        <p>Author: {{ value.name }}</p>
                {%  endfor %}
            </div>
        </section>
        <section class="footer">
            <div class="ac data">
                &copy; 2017 Imprint
            </div>
        </section>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>

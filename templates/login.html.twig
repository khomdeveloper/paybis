<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Check24 test task{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('styles/main.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <section class="header">
            <div class="ac">
                <a href="/" class="logo"><img src="{{ asset('images/logo.jpg') }}" width="100"/></a>
            </div>
            <div class="ac">
                <a href="/">Homepage</a>&nbsp;|&nbsp;<a href="/login">Login</a>
            </div>
        </section>
        <section class="content">
            <div>
                <form method="POST" action="/log">
                    <label>E-mail: <input type="email" name="login" value="" placeholder="10 symbols"/></label>
                    <label>Password: <input type="password" name="pass" value="" placeholder="10 symbols"/></label>
                    <button type="submit">LOGIN</button>
                </form>
            </div>
        </section>
        <section class="footer">
            <div class="ac data">
                &copy; 2017 Imprint
            </div>
        </section>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
